{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.json",
			"!**/node_modules",
			"!**/dist",
			"!**/.output",
			"!**/.nitro",
			"!**/.tanstack",
			"!**/src/components/ui",
			"!**/routeTree.gen.ts",
			"!**/migrations",
			"!drizzle.config.ts",
			"!.agents/**/*"
		]
	},
	"linter": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
